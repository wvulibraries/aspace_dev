<%= setup_context(:object => @accession, :title => t("actions.defaults")) %>

<%= form_for @accession, :as => "accession", :url => {:action => :update_defaults}, :html => {:class => 'form-horizontal aspace-record-form', :id => "accession_form"} do |f| %>

  <%= form_context :accession, @accession do |form| %>
    <div class="d-flex">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "shared/toolbar_new_records" %>
        <div class="record-pane">
          <header class="d-flex align-items-center">
            <h2><%= t("accession._singular") %> <%= t("actions.defaults") %> <span class="label label-info badge"><%= t("accession._singular") %></span></h2>
            <%= link_to_help :topic => "accession", :style => "margin-left: auto;" %>
          </header>
          <%= render_aspace_partial :partial => "accessions/form", :locals => {:form => form} %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
